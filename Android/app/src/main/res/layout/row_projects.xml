<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="6dp"
    android:background="@android:color/white"
    app:strokeWidth="2dp"
    android:layout_margin="10dp"
    app:strokeColor="@color/colorPrimary">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv_row_projects_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Project name here"/>

        <TextView
            android:id="@+id/tv_row_projects_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/tv_row_projects_name"
            android:text="Project description here"/>

        <TextView
            android:id="@+id/tv_row_projects_amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/tv_row_projects_description"
            android:text="Amount needed: "/>

        <TextView
            android:id="@+id/tv_row_projects_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_row_projects_description"
            android:layout_toEndOf="@+id/tv_row_projects_amount_text"/>

        <TextView
            android:id="@+id/tv_row_projects_upvotes_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/tv_row_projects_amount_text"
            android:text="Votes: "/>

        <TextView
            android:id="@+id/tv_row_projects_upvotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_row_projects_amount_text"
            android:layout_toEndOf="@+id/tv_row_projects_upvotes_text"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>