<!--        android:layout_height="match_parent"-->
<!--        android:gravity="center">-->

<!--        <ProgressBar-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_height="50dp"/>-->
<!--    </LinearLayout>-->

</RelativeLayout>